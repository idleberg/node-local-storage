{
	"name": "@idleberg/local-storage",
	"version": "1.0.0",
	"description": "A NodeJS ponyfill for the Storage API, utilizing SQLite",
	"author": "Jan T. Sott",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/idleberg/node-local-storage.git"
	},
	"type": "module",
	"exports": {
		"types": {
			"import": "./dist/index.d.ts",
			"require": "./dist/index.d.cts"
		},
		"import": "./dist/index.js",
		"require": "./dist/index.cjs"
	},
	"types": "./dist/index.d.ts",
	"files": [
		"dist/",
		"LICENSE",
		"README.md"
	],
	"engines": {
		"node": "^22.5.0 || >=24.0.0"
	},
	"scripts": {
		"build": "tsdown",
		"lint": "concurrently --prefix-colors blue,green,magenta npm:lint:*",
		"lint:biome": "biome check",
		"lint:knip": "knip --cache --production",
		"lint:publint": "publint",
		"dev": "node run build -- --watch",
		"prepack": "npm run build",
		"prepare": "lefthook install",
		"publish": "np --any-branch",
		"test": "node --test --experimental-strip-types tests/*.ts"
	},
	"keywords": [
		"storage api",
		"localstorage",
		"local-storage",
		"local storage",
		"sessionstorage",
		"session-storage",
		"session storage",
		"ponyfill"
	],
	"devDependencies": {
		"@commitlint/cli": "^20.1.0",
		"@commitlint/config-conventional": "^20.0.0",
		"@idleberg/configs": "^0.3.1",
		"@types/node": "~24.9.1",
		"concurrently": "^9.2.1",
		"klip": "^0.2.0",
		"knip": "^5.66.3",
		"np": "^10.2.0",
		"publint": "^0.3.15",
		"tsdown": "^0.15.10"
	},
	"packageManager": "pnpm@10.17.0+sha512.fce8a3dd29a4ed2ec566fb53efbb04d8c44a0f05bc6f24a73046910fb9c3ce7afa35a0980500668fa3573345bd644644fa98338fa168235c80f4aa17aa17fbef"
}
